<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gameover"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fasttouch.MainActivity" >

    <ImageView
        android:id="@+id/imageViewRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:contentDescription="@string/game_repeat_description"
        android:onClick="restart"
        android:src="@drawable/repeat" />

    <TextView
        android:id="@+id/textViewGameOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageViewRepeat"
        android:layout_centerVertical="true"
        android:text="@string/game_over"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewFinalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewGameOver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/final_score" />

    <TextView
        android:id="@+id/textViewFinalScoreValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewFinalScore"
        android:layout_alignBottom="@+id/textViewFinalScore"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/imageViewRepeat" />

    <TextView
        android:id="@+id/textViewHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewFinalScore"
        android:layout_below="@+id/textViewFinalScoreValue"
        android:text="@string/higscore" />

    <TextView
        android:id="@+id/textViewHighScoreValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewHighScore"
        android:layout_alignBottom="@+id/textViewHighScore"
        android:layout_alignLeft="@+id/textViewFinalScoreValue"/>
    
</RelativeLayout>
