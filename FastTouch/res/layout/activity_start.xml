<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_start"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fasttouch.MainActivity" >

    <ImageButton
        android:id="@+id/imageButtonStartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="400dp"
        android:layout_marginRight="120dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/game_start_description"
        android:onClick="startGame"
        android:src="@drawable/play" />

    <ImageView
        android:id="@+id/imageViewBirdOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageButtonStartGame"
        android:layout_marginLeft="28dp"
        android:contentDescription="@string/bird_description"/>

    <ImageView
        android:id="@+id/imageViewBirdTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButtonStartGame"
        android:layout_marginRight="26dp"
        android:contentDescription="@string/bird_description" />

</RelativeLayout>
